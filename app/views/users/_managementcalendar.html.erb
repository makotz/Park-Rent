<div id="calendar"></div>
<script>
$(document).ready(function() {
    $('#calendar').html("")
    $('#calendar').fullCalendar({
        header: {
            left: 'today',
            center: 'prev title next',
            right: 'month,agendaWeek'
        },
        defaultView :'month',
        height: 600,
        events: "/users/" + <%= current_user.id %> +'/schedule.json'
    });
});
</script>
